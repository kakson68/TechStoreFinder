
<p id="notice"><%= notice %></p>
<!--enable dynamic page title-->
<%= render 'layouts/shared/page_title', title: "showing all repairs" %>


<!-- Repair search notice-->
<% if @repairs.length == 0  %>
<br />
<h3> No Repair Found to Match your Search </h3>
<% end %>


<!--table  below class[serviceprovider] was added jkm-->
<!-- responsive functionlaity added to table-->
<div class="table-responsive">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Job number</th>
      <th>Fault</th>
      <th>Descrition</th>
      <th>Repair type</th>
      <th>Booking date</th>
      <th>Location</th>
      <th>Repairer</th>
      <th>Serviceprovider</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.job_number %></td>
        <td><%= repair.fault %></td>
        <td><%= repair.descrition %></td>
        <td><%= repair.repair_type %></td>
        <td><%= repair.booking_date %></td>
        <td><%= repair.location %></td>
        <td><%= repair.repairer %></td>
        
        <%# Serviceprovider added working now %>
       
        <td><%= repair.serviceprovider&.title %></td>
        
        
        <td><%= link_to 'Show', repair %></td>
        
        <% if current_user && current_user.admin %>
          <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
          <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Repair', new_repair_path %>
